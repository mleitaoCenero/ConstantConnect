@model ConstantConnect.MVCClient.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="row" id="accordion">
    @foreach (var item in Model.Tiles)
        {
            <div class="col-lg-3 col-md-6">
                <div class="info-box bg-@item.Color">
                    <span class="info-box-icon"><i class="@item.Icon"></i></span>
                    <div class="info-box-content">
                        <div class="info-box-tooltip-icon">
                            <button type="button" class="btn btn-outline" data-toggle="popover" data-trigger="focus" data-placement="left" title="@item.Title" data-content="@item.Description">
                                <span class="fa fa-info-circle" aria-hidden="true"></span>
                            </button>
                        </div>
                        <span class="info-box-number">@item.Data</span>
                        <span class="info-box-text">@item.Title</span>
                        <div class="info-box-footer">
                            <a href="@item.LinkToTable" data-toggle="collapse" data-parent="#accordion">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        @{Html.RenderPartial("ActiveRoomsTable", Model);}
        @{Html.RenderPartial("ProactiveRoomsTable", Model);}
        @{Html.RenderPartial("RoomPerformanceTable", Model);}
        @{Html.RenderPartial("ServiceTicketsTable", Model);}

</div>
