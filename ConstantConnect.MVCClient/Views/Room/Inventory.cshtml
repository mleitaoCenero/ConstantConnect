@model IEnumerable<ConstantConnect.DTO.CRM.New_clientequipment>
<div class="container-fluid">
    <div class="col-md-12">
        <h3>Inventory</h3>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control" id="search-roominventory" placeholder="Search Inventory">
                <a href="#" class="btn btn-primary input-group-addon" id="export-button">Export</a>
            </div>
        </div>
        <div class="table-container">
            <table class="table table-striped table-hover modal-data-table" id="table-roominventory">
                <thead>
                    <tr>
                        <th>Make</th>
                        <th class="text-center">Serial</th>
                        <th class="text-center">Notes</th>
                        <th>Details</th>
                        <th>Modify</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-overflow">
                            @{ var name = item.New_Model == null ? item.New_ModelNumber : item.New_Model;}
                            <td>
                                @Html.ActionLink(name, "", "", new { Id = item.New_clientequipmentId }, new
                           {
                               data_target = "#",
                               data_toggle = ""
                           })
                            </td>
                            <td>@item.New_SerialNumber</td>
                            <td>@item.New_EquipmentNotes</td>
                            <td>@item.New_ComponentDetails</td>
                            <td class="room-inventory-actions text-right">
                                <a href="#" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                <a href="#" class="btn btn-info"><i class="fa fa-history"></i></a>
                            </td>
                        </tr>
                                }
                </tbody>
            </table>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $('#search-roominventory').keyup(function () {
                var value = this.value.toLowerCase().trim();
                $('#table-roominventory').find("tr").each(function (index) {
                    if (!index) return;
                    $(this).find("td").each(function () {
                        var id = $(this).text().toLowerCase().trim();
                        var notFound = (id.indexOf(value) == -1);
                        $(this).closest('tr').toggle(!notFound);
                        return notFound;
                    })
                });
            });
        });
    </script>



