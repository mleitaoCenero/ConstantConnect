@model IEnumerable<ConstantConnect.DTO.CRM.New_clientequipmemtipdata>
<div class="container-fluid">
    <div class="col-md-12">
        <h3>Devices/IP Data</h3>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control" id="search-roomdevicesipdata" placeholder="Search for a Device">
                <a href="#" class="btn btn-primary input-group-addon" id="export-button">Export</a>
            </div>
        </div>
        <div class="table-container">
            <table class="table table-striped table-hover modal-data-table" id="table-roomdevicesipdata">
                <thead>
                    <tr>
                        <th>Device</th>
                        <th>Model</th>
                        <th class="text-center">Address</th>
                        <th>Firmware</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-overflow">
                            @*<td>@item.New_ClientRoomIdName</td>*@
                            <td>@item.new_ClientEquipmentIdName</td>
                            <td>@item.new_ModelNumber</td>
                            <td class="text-center">@item.New_IPAddress</td>
                            <td>@item.new_FirmwareVersion</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //$('#table-roomdevicesipdata').DataTable();
        //$('#table-roomdevicesipdata').DataTable({
        //    responsive: true,
        //    info: false,
        //    scrollY: "310px",
        //    scrollX: true,
        //    scrollCollapse: true,
        //    paging: false,
        //    columnsDefs: [
        //        { "width": "35%", "targets": 0 }
        //    ],
        //    fixedColumns: true
        //});

        $('#search-roomdevicesipdata').keyup(function () {
            var value = this.value.toLowerCase().trim();
            $('#table-roomdevicesipdata').find("tr").each(function (index) {
                if (!index) return;
                $(this).find("td").each(function () {
                    var id = $(this).text().toLowerCase().trim();
                    var notFound = (id.indexOf(value) == -1);
                    $(this).closest('tr').toggle(!notFound);
                    return notFound;
                })
            });
        });
    });
</script>


