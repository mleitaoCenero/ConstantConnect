@model IEnumerable<ConstantConnect.DTO.CRM.New_Warranty>

@{
    Layout = null;
}
<div class="container-fluid">
    <div class="col-md-12">
        <h3>Warranty Information</h3>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control" id="search-roomwarranty" placeholder="Search for a Warranty">
                <a href="#" class="btn btn-primary input-group-addon" id="export-button">Export</a>
            </div>
        </div>

        <div class="table-container">
            <table class="table table-striped table-hover modal-data-table" id="table-roomwarranty">
                <thead>
                    <tr>
                        <th class="text-left">Warranty</th>
                        <th class="text-center">Type</th>
                        <th class="text-center">SOW #</th>
                        <th class="text-right">Start On</th>
                        <th class="text-right">End On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-overflow">
                            <td class="text-left">@item.New_name</td>
                            <td class="text-center">@item.New_WarrantyType</td>
                            <td class="text-center">@item.New_SOWNo</td>
                            <td class="text-right">@string.Format("{0:MM/dd/yy}", item.New_StartDate)</td>
                            <td class="text-right">@string.Format("{0:MM/dd/yy}", item.New_EndDate)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>