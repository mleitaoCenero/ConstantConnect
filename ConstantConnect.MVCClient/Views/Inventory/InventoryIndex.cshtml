@model ConstantConnect.MVCClient.Models.InventoryModel
@{
    ViewBag.Title = "Inventory";
}

<div class="row border-bottom bg-white page-heading">
    <div class="col-lg-12">
        <h3 class="font-light">Select a room</h3>
        <select class="selectpicker col-lg-4 no-padding" data-live-search="true" title="Rooms" id="select-inventory">
            @foreach (var item in Model.ClientRooms)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
</div>

<div class="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div id="divInventoryTable">
                @{Html.RenderAction("InventoryTable"); }
            </div>
        </div>
    </div>
</div>

